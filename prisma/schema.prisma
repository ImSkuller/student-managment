datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(cuid())
  userid    String  @unique
  username  String
  name      String
  email     String  @unique
  password  String
  role      Role

  // student
  feeStatus        String?
  totalAttendance  Int?
  gpa              Float?

  // teacher
  joinDate         DateTime?

  // admin
  permissions      String?

  subjects Subject[]
}

model Subject {
  id        String @id @default(cuid())
  name      String
  marks     Float?
  attendance Float?
  userId    String
  user      User @relation(fields: [userId], references: [id])
}

enum Role {
  student
  teacher
  admin
}

model AttendanceSession {
  id        String   @id @default(cuid())
  teacherId String
  section   String
  question  String
  options   Json
  correct   String
  active    Boolean  @default(true)
  expiresAt DateTime
  createdAt DateTime @default(now())

  submissions Submission[]
}

model Submission {
  id          String @id @default(cuid())
  username    String
  answer      String
  correct     Boolean
  sessionId   String
  session     AttendanceSession @relation(fields: [sessionId], references: [id])
}

model Section {
  id    String @id @default(cuid())
  name  String @unique
}
